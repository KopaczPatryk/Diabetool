<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/b400"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:nestedScrollingEnabled="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:textSize="15sp"
            android:text="@string/f_product_custom_add_warning"
            android:textColor="#333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:textSize="15sp"
            android:text="@string/f_product_custom_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            style="@style/AppTheme.TextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="64"
            android:id="@+id/iName"
            android:hint="@string/f_product_name_maxlenght"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp"
            style="@style/AppTheme.EditText"
            android:layout_marginRight="25dip"
            android:layout_marginLeft="25dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/f_product_custom_add_energyvalue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textIsSelectable="false"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />
            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iEnergyValue"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:layout_marginLeft="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                android:elegantTextHeight="false"
                style="@style/AppTheme.EditText"
                android:layout_marginRight="8dp"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/proteins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iProteins"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/AppTheme.TextView"
                android:textSize="15sp"
                android:text="@string/fat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <kopacz.diabetool.FloatInputEditText
                style="@style/AppTheme.EditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iFat"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/carbohydrates"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iCarbohydrates"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/roughage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iRoughage"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:maxLines="1"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:hint="@string/product_creation_unknwn_contents"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/sugar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iSugar"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1"
                android:layout_marginLeft="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="@string/caffeine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <kopacz.diabetool.FloatInputEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/iCaffeine"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:hint="@string/product_creation_unknwn_contents"
                android:maxLines="1"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.TextView"
                android:textSize="15sp"
                android:text="@string/barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/barcode"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/button_barcode"
                android:background="@mipmap/ic_barcode"
                android:clickable="true" />
            <EditText
                style="@style/AppTheme.EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/barcode_text"
                android:layout_marginStart="8dp"
                android:inputType="number"
                android:digits="0987654321"
                android:textSize="15sp"
                android:typeface="monospace"
                android:hint="@string/product_creation_unknwn_barcode"
                android:gravity="start|center_vertical"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:textSize="15sp"
                android:text="@string/values_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iPerGrams"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:text="100"
                android:minWidth="100dp"
                android:inputType="number"
                android:digits="@string/digitset_float"
                android:textSize="15sp"
                style="@style/AppTheme.EditText"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView3"
                android:textSize="15sp"
                android:text="@string/g_of_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_vertical"
                style="@style/AppTheme.TextView" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f_edit_product_save"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:id="@+id/buttonAddProduct"
            android:elegantTextHeight="false"
            style="@style/AppTheme.Button"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
