<resources>
    <!-- Base application theme. -->
    <!--parent="Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/b800</item>
        <item name="colorAccent">@color/b50</item>
        <item name="android:colorForeground">@color/white</item>
        <!--<item name="android:background">@color/colorPrimaryDark</item>-->
    </style>

    <style name="AppTheme.DefaultAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <!--<item name="colorAccent">@color/white</item>-->
        <!--&lt;!&ndash;title and message color&ndash;&gt;-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--&lt;!&ndash;dialog background&ndash;&gt;-->
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->
    </style>


    <style name="AppTheme.TextView" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
    <style name="AppTheme.Toolbar">
        <item name="android:itemTextAppearance">@style/AppTheme.EditText</item>
        <item name="colorPrimary">@color/b600</item>
        <!--<item name="android:colorPrimaryDark">@color/b800</item>-->
        <!--<item name="android:background">@android:color/holo_blue_light</item>-->
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/white</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/b600</item>
        <item name="android:popupTheme">@style/AppTheme.Toolbar.Popup</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="AppTheme.MainMenu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/b300</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/b200</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@color/b500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
    </style>

    <style name="AppTheme.Button.MainMenu" parent="AppTheme">
        <item name="android:background">@color/b200</item>
    </style>

    <style name="AppTheme.Toolbar.Popup">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/htwhite</item>
    </style>

    <style name="AppTheme.fragmentProductInfo">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--POŁĄCZYĆ POWTARZAJĄCE SIĘ WARTOŚCI W JEDNĄ-->
    <color name="colorPrimary">@color/b200</color>
    <color name="colorAccent">#ffffff</color>
    <color name="primary_material_light">#2c28ff</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="controlActivated">#fa5</color>
    <color name="controlNormal">#fa0</color>
    <color name="cursorAccent">#faf</color>
    <color name="white">#ffffff</color>
    <color name="htwhite">#88ffffff</color>

    <!--PALETA KOLORÓW Z OFICJALNEJ STRONY ANDROIDA-->
    <color name="b50">#e3f2fd</color>
    <color name="b100">#bbdefb</color>
    <color name="b200">#90caf9</color>
    <color name="b300">#64b5f6</color>
    <color name="b400">#42a5f5</color>
    <color name="b500">#2196f3</color>
    <color name="b600">#1e88e5</color>
    <color name="b700">#1976d2</color>
    <color name="b800">#1565c0</color>
    <color name="b900">#0d47a1</color>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
